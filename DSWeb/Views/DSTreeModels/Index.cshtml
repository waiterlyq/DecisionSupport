    <script type="text/javascript">
        $(function () {
            //1.初始化Table
            var oTable = new TableInit();
            oTable.Init();

            var oButtonInit = new ButtonInit();
            oButtonInit.Init();

            $('body').on('hidden', '.modal', function () {
                $(this).removeData('modal');
            });

        });
        var TableInit = function () {
            var oTableInit = new Object();
            //初始化Table
            oTableInit.Init = function () {
                $('#tb_DSTreeModel').bootstrapTable({
                    url: '/DSTreeModels/GetDSTreeModelList',         //请求后台的URL（*）
                    method: 'post',                      //请求方式（*）
                    toolbar: '#toolbar',                //工具按钮用哪个容器
                    striped: false,                      //是否显示行间隔色
                    cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                    pagination: true,                   //是否显示分页（*）
                    sortable: false,                     //是否启用排序
                    sortOrder: "asc",                   //排序方式
                    queryParams: oTableInit.queryParams,//传递参数（*）
                    sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
                    pageNumber: 1,                       //初始化加载第一页，默认第一页
                    pageSize: 10,                       //每页的记录行数（*）
                    pageList: [10, 25, 50, 100],        //可供选择的每页的行数（*）
                    search: true,                       //是否显示表格搜索，此搜索是客户端搜索，不会进服务端，所以，个人感觉意义不大
                    strictSearch: true,
                    showColumns: true,                  //是否显示所有的列
                    showRefresh: true,                  //是否显示刷新按钮
                    minimumCountColumns: 2,             //最少允许的列数
                    clickToSelect: true,                //是否启用点击选中行
                    height: 500,                        //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
                    uniqueId: "ModGUID",                     //每一行的唯一标识，一般为主键列
                    showToggle: true,                    //是否显示详细视图和列表视图的切换按钮
                    cardView: false,                    //是否显示详细视图
                    detailView: false,                   //是否显示父子表
                    columns: [{
                        checkbox: true
                    },  {
                        field: 'ModName',
                        title: '模型名称'
                    }, {
                        field: 'ModeGenerateTime',
                        title: '模型生成时间'
                    }, {
                        field: 'ModDataSource',
                        title: '模型数据源'
                    }, {
                        field: 'ModRemark',
                        title: '模型描述'
                    }]
                });
            };
            return oTableInit;
        };

        var ButtonInit = function () {
            var oInit = new Object();
            var postdata = {};

            oInit.Init = function () {
                $("#btn_xz").click(function () {
                    $("#modal").modal({
                        remote: "/DSTreeModels/Create"
                    })
                })

                $("#btn_ger").click(function () {
                    var arrselections = $("#tb_DSTreeModel").bootstrapTable('getSelections');
                    $.ajax({
                        type: "post",
                        url: "/DSTreeModels/Generate",
                        data: { ModID: arrselections[0].ModGUID },
                        success: function (data) {
                            alert("生成成功！");
                        },
                        error: function () {
                            toastr.error('Error');
                        },
                        complete: function () {

                        }

                    });
                });
                $("#btn_sz").click(function () {
                    var arrselections = $("#tb_DSTreeModel").bootstrapTable('getSelections');
                    $("#modal").modal({
                        remote: "/DSTreeCEMaps/Index?id=" + arrselections[0].ModGUID
                    })
                });
                //$("#btn_query").click(function () {
                //    $("#tb_departments").bootstrapTable('refresh');
                //});
            };

            return oInit;
        };
    </script>

</head>
<body>
